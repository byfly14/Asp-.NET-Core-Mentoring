@using Microsoft.AspNetCore.Mvc.Rendering
@model Dictionary<string, (string controller, string action)>

@if (Model.Count > 1)
{ 
    <ul class="breadcrumb">
        @foreach (var (key, (controller, action)) in Model.Take(Model.Count - 1))
        {
            <li>@Html.ActionLink(key, action, controller)</li>
        }
        <li>@Model.Last().Key</li>
    </ul>
}

<style>
    ul.breadcrumb {
        padding: 10px 16px;
        list-style: none;
        background-color: #eee;
    }

        ul.breadcrumb li {
            display: inline;
            font-size: 18px;
        }

            ul.breadcrumb li + li:before {
                padding: 8px;
                color: black;
                content: "/\00a0";
            }

            ul.breadcrumb li a {
                color: #0275d8;
                text-decoration: none;
            }

                ul.breadcrumb li a:hover {
                    color: #01447e;
                    text-decoration: underline;
                }
</style>